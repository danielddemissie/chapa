{
  "name": "chapa-node",
  "version": "1.1.0",
  "description": "Chapa payment sdk node",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "homepage": "https://github.com/danielddemissie/chapa.git#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/danielddemissie/chapa.git"
  },
  "bugs": {
    "url": "https://github.com/danielddemissie/chapa.git/issues"
  },
  "author": "daniel <daniel@addissoftware.com>",
  "license": "MIT",
  "scripts": {
    "start": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "test": "jest --config jestconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "dependencies": {
    "axios": "^1.2.1"
  },
  "keywords": [
    "chapa",
    "chapa-node",
    "chapasdk",
    "chapanode"
  ],
  "files": [
    "build/**/*"
  ],
  "devDependencies": {
    "@types/jest": "^29.2.4",
    "jest": "^29.3.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.4"
  }
}
